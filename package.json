  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/index.js",
    "prestart": "tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev index.ts",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "tsc": "tsc"
  },
  "license": "GPL-3.0",
  "private": false,
  "dependencies": {
    "apollo-server-express": "^2.25.1",
    "axios": "^0.21.1",
    "bili-api": "^1.6.0",
    "config": "^3.3.6",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "graphql": "^15.5.0",
    "mongoose": "^5.12.13"
  },
  "devDependencies": {
    "@types/config": "^0.0.38",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/supertest": "^2.0.11",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.2"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
